{
    "name": "pascal-atomico",
    "version": "0.0.1",
    "description": "This is a small skeleton to create distributable components based on Atomico",
    "iife": "dist/pascal-triangle.iife.js",
    "source": "src/index.js",
    "author": "Matias Trujillo Olivares",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/UpperCod/atomico-starter-component.git"
    },
    "scripts": {
        "watch": "npx rollup -c -w",
        "prebuild": "rm -rf dist && mkdir dist",
        "build": "npx rollup -c",
        "postbuild": "cp -R public/* dist"
    },
    "dependencies": {
        "atomico": "0.5.4"
    },
    "globals": {
        "atomico": "atomico"
    },
    "devDependencies": {
        "uglify-es": "3.3.9"
    }
}
