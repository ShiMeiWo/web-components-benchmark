{
    "compilerOptions": {
        "declaration": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "tsx",
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.iterable",
            "es2015.symbol",
            "es2015.symbol.wellknown"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "outDir": "_build/",
        "removeComments": false,
        "sourceMap": false,
        "strict": true,
        "target": "es6",
        "types": []
    },
    "include": ["./src/**/*.ts"]
}
